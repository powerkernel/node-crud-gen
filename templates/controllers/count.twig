/* npm imports */
import { inject, injectable } from "inversify";

/* local imports */
import IDENTIFIERS from "../../../config/identifiers";
import { {{ListEntityDto}} } from "../dtos";

/* type imports */
import type { {{CountEntityAction}} } from "../actions";

/**
 * class {{CountEntityController}}
 */
@injectable()
class {{CountEntityController}} {
  private action: {{CountEntityAction}};

  constructor(@inject(IDENTIFIERS.{{CountEntityAction}}) action: {{CountEntityAction}}) {
    this.action = action;
  }

  async execute(dto: {{ListEntityDto}}) {
    return {
      count: await this.action.handle(dto),
    };
  }
}

export default {{CountEntityController}};
