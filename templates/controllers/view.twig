/* npm imports */
import { inject, injectable } from "inversify";

/* local imports */
import IDENTIFIERS from "../../../config/identifiers";

/* type imports */
import type { {{ViewEntityAction}} } from "../actions";

/**
 * class {{ViewEntityController}}
 */
@injectable()
class {{ViewEntityController}} {
  private action: {{ViewEntityAction}};

  constructor(@inject(IDENTIFIERS.{{ViewEntityAction}}) action: {{ViewEntityAction}}) {
    this.action = action;
  }

  async execute(id: string) {
    return await this.action.handle(id);
  }
}

export default {{ViewEntityController}};
