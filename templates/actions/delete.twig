/* npm imports */
import { inject, injectable } from "inversify";

/* local imports */
import IDENTIFIERS from "../../../config/identifiers";
import { {{EntityDto}} } from "../dtos";

/* type imports */
import type { {{DeleteEntityRepo}} } from "../repositories";

/**
 * class {{DeleteEntityAction}}
 */
@injectable()
class {{DeleteEntityAction}} {
  private repo: {{DeleteEntityRepo}};

  constructor(
    @inject(IDENTIFIERS.{{DeleteEntityRepo}})
    repo: {{DeleteEntityRepo}}
  ) {
    this.repo = repo;
  }

  public async handle(id: string): Promise<{{EntityDto}} | null> {
    return await this.repo.remove(id);
  }
}

export default {{DeleteEntityAction}};
